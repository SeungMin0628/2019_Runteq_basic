<%= content_for :title, t('users.index.title') %>
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <div>
          <div class="row mb-3">
            <div class="col-sm-none col-md-6"></div>
            <div class="col-sm-12 col-md-6">
              <%= search_form_for @q, url: admin_users_path do |f| %>
                <div class="input-group">
                  <%= f.search_field :first_name_or_last_name_or_email_cont, placeholder: t('shared.search_keyword'), class: 'form-control', type: 'search' %>
                  <div class="input-group-append">
                    <%= f.submit t('shared.search'), class: 'btn btn-primary',  data: {disable_with: t('shared.search')}, name: 'commit' %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th><%= User.human_attribute_name(:email) %></th>
                    <th><%= User.human_attribute_name(:full_name) %></th>
                    <th><%= User.human_attribute_name(:role) %></th>
                    <th><%= User.human_attribute_name(:created_at) %></th>
                    <th></th>
                  </tr>
                </thead>
                <%= render @users %>
              </table>
            </div>
          </div>
        </div>
      </div>
      <div class="card-footer clearfix">
        <div class="row col-12 justify-content-center">
          <div class="dataTables_paginate paging_simple_numbers" id="example1_paginate">
            <%= paginate @users %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= 
    render(
      'shared/admin/delete_confirm_modal',
      modal_id: 'js-user-delete-confirm-modal',
      modal_title: t('users.delete.title'),
      modal_body: t('users.delete.body'),
      link_id: 'js-user-delete-button'
    )
  %>
</div>
