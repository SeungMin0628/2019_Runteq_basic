<div class="col-sm-12 col-md-6 col-lg-4 mb-3">
  <div id="product-id-33">
    <div class="card">
        <%= image_tag(board.board_image.url, class: 'card-img-top', width: 300, height: 200) %>
      <div class="card-body">
        <h4 class="card-title">
          <%= link_to board.title, board_path(id: board.id) %>
        </h4>
        <div class="bookmark">
        </div>

        <ul class="list-inline">
          <li class="list-inline-item">
            <i class="fa fa-user"></i>
            <%= board.user.decorate.full_name %>
          </li>
          <li class="list-inline-item">
            <i class="fa fa-calendar"></i>
            <%= l board.created_at, format: :long %>
          </li>
          <%= render "boards/control_area", board: board %>
        </ul>
        <%= simple_format(h(board.body), class: 'card-text').html_safe %>
      </div>
    </div>
  </div>
</div>