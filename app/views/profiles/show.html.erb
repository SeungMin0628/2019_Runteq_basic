<%= content_for :title, t('profile.show.title') %>
<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('profile.show.title') %></h1>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 text-right">
      <%= link_to(t('shared.edit'), edit_profile_path, class: 'btn btn-success') %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <table class="table">
        <tbody>
          <tr>
            <th><%= User.human_attribute_name(:email) %></th>
            <td><%= current_user.email %></td>
          </tr>
          <tr>
            <th><%= User.human_attribute_name(:full_name) %></th>
            <td><%= current_user.decorate.full_name %></td>
          </tr>
          <tr>
            <th><%= User.human_attribute_name(:avatar) %></th>
            <td><%= image_tag(current_user.avatar.url, class: 'img-thumbnail rounded-circle avatar avatar-medium') %></td>
          </tr>  
        </tbody>
      </table>
    </div>
  </div>
</div>
