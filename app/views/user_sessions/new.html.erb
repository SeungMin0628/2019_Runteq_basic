<%= content_for :title, t('shared.login') %>
<div class="container">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('shared.login') %></h1>
      <%= form_with url: login_path, method: :post, local: true do |f| %>
        <div class="form-group">
          <!-- Email Address -->
          <%= f.label :email, User.human_attribute_name('email') %>
          <%= f.email_field :email, class: 'form-control' %>  
        </div>

        <div class="form-group">
          <!-- Password -->
          <%= f.label :password, User.human_attribute_name('password') %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit t('shared.login'), class: 'btn btn-primary' %>
        </div>
      <% end %>

      <hr>

      <div>
        <a href="<%= auth_at_provider_path(provider: :facebook) %>" class="btn btn-primary">
          <i class="fab fa-facebook-square mr-2"></i>
          <span><%= t('shared.oauths', provider: 'Facebook') %></span>
        </a>
      </div>
    
      <div class='text-center'>
        <%= link_to t('user_sessions.register_link'), new_user_path %>
        <%= link_to t('user_sessions.reset_password_link'), new_password_reset_path %>
      </div>
    </div>
  </div>
</div>
